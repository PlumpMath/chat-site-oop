
// global stylus

// @font-face
//  font-family Andika
//  src url(fonts/Andika.woff)

body
  margin 0px
  background hsl(0,0,90)

*
  font-family "wenquanyi micro hei"
  box-sizing border-box
  -moz-box-sizing border-box
  box-shadow 0px 0px 4px hsl(0,0,90)

#paper
  width 900px
  margin 0px auto
  background hsl(0,0,96)

// navigation bar

#nav
  position relative
  padding 8px
  background hsl(0,0,80)

  &>div
    display inline-block

  #home
    font-size 18px

#paper
  position absolute
  right 0px
  padding 0px 6px
  width 60px

  span
    line-height 20px

  .menu
    position absolute
    right 0px
    background hsl(0,0,97)
    top 20px
    display none

  &:hover .menu
    display block

  .login

    .menu
      width 300px
      padding 20px 10px
      text-align right
      line-height 28px

      input
        border none
        padding 0px 4px
        width 160px

  .loading
    img
      width 100%

// main part to write posts

#posts
  padding 10px 8px 100px

#more
  text-align center